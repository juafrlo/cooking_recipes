<script>
function fbs_click(){
 u=location.href;
 t=document.title;
 window.open('http://www.facebook.com/sharer.php?u='+encodeURIComponent(u)+'&t='+encodeURIComponent(t),'sharer','toolbar=0,status=0,width=626,height=436');
 return false;
}
</script>

<ul id="social_buttons">
  <% if current_user %>
	  <li>
      <% unless current_user.has_favorite?(obj) %>
	      <span id="favorite_link">
					  <%= image_tag('web/spinner.gif', :id => "favorite_spiner",
					    :style=> 'display:none;')%>
				    <%= link_to_remote t(:Add_to_favorites), :update => "",
					    :url  => favorites_path(:obj_id => obj.id, :type => obj.class.to_s),
				      :loading => "$('favorite_spiner').appear();",
					    :method => :post %>
				</span>
      <% else %>
        <span class="added_to_favorites"><%= t(:Added_to_favorites) %> </span>
      <% end %>
			|
		</li>
	<% end %>
  <li>
	  <%= link_to image_tag('web/printer.png', :alt => t(:Print)),
	   {:format => :print}, {:target => 'blank', :class => 'printer', :rel => 'nofollow'} %>  
	</li>
	<li>
		|
		<%= t(:Share_with) %>: 
	</li>
  <li>
		<a href="http://www.facebook.com/share.php?u=<url>" onclick="return fbs_click()" target="_blank">
		  <%= image_tag('social_buttons/facebook_share_icon.gif', :alt => 'facebook')%>
		</a>
  </li>

  <li>	
		<%= link_to image_tag('social_buttons/bot-link-twitter.gif', :alt => "twitter"),
		   "http://twitter.com/home?status=Currently%20reading%20#{url_for(:only_path => false)}"%>
  </li>

  <li>
		<%= link_to image_tag('social_buttons/bot-link-myspace.gif', :alt => 'myspace'),
		  "http://www.myspace.com/Modules/PostTo/Pages/?u=#{url_for(:only_path => false)}"%>
  </li>

  <li>
		<%= link_to image_tag('social_buttons/bot-link-delicious.gif', :alt => 'delicious'),
		  "http://del.icio.us/post?url=#{url_for(:only_path => false)}" %>
  </li>

  <li>
		<%= link_to image_tag('social_buttons/bot-link-meneame.gif', :alt => 'meneame'),
		  "http://meneame.net/submit.php?url=#{url_for(:only_path => false)}"%>
	  </li>
</ul>
<div class="clear"></div>