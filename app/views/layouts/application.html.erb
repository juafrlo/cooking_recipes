<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
       "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title><%=SITE_NAME%>: <%= yield(:title) || controller.action_name %></title>
  <%= stylesheet_link_tag 'application' %>
  <%= stylesheet_link_tag 'rating' %>
  <%= stylesheet_link_tag 'auto_complete' %>
  <%= javascript_include_tag :defaults %>
</head>

<body>
	<div id="wrapper">
    <div id="header">
	  	<div id="logo">
	      <h1><%= link_to SITE_NAME, '/' %></h1>
		  </div>
		  <div id="menu">
		    <ul>
			    <% if current_user && current_user.admin? %> 
    			  <li>
		    		  <%= link_to t(:Administration), admins_path %>
			      </li>
			    <% end %>
			    <li>
				    <%= link_to t(:News), noticias_path %>
			    </li>
    			<li>
		  		  <%= link_to t(:Recipes), recetas_path %>
			    </li>
  			  <li>
				    <%= link_to t(:Advises), advices_path %>
			    </li>
  			  <li>
				    <%= link_to t(:Restaurants), restaurants_path %>
  			  </li>
  			  <li>
			  	  <%= link_to t(:Forums), :controller => 'forums', :action => 'index' %>
			    </li>
    			<li>
		    		<%= link_to t(:Contact), '/' %>
		 	    </li>
		    </ul>
	    </div>
	  </div>	<!-- end #header -->

    <div id="page">
		  <div id="content" <%unless no_forums%>style="width:auto;"<%end%>>
			  <div class="post">	
				  <div class="flash_message">
					  <%= my_flash_message(flash) %>
		      </div>	   
				  <div class="clear"></div>
				  <%= yield  %>
			  </div>
		  </div> <!-- end #content -->
      <% if no_forums %>
		    <div id="sidebar">
				  <div id="sidebar-bgtop"></div>
				  <div id="sidebar-content">
					  <div id="sidebar-bgbtm">
					    <ul>
					      <li id="search">
						      <h3><%= t(:Search)%></h3>
							    <% form_for :receta, 
							    :url => { :controller => "recetas", :action => "resultados_busqueda" }   do |f| %>
								    <fieldset>
								      <%= f.text_field :name, :size => 24, :value => "" %>
								      <%= f.submit t(:Search) %>
								    </fieldset>
           				<% end %>
					      </li>
        				<li>
				      	  <h3><%= t(:Privated_menu) %></h3>
        					<ul>
				      		  <li>
				              <%= log_in_out %> 
				              <% if !logged_in? %>
							    		  / <%= link_to t(:Register), signup_path %>
							        <% end %> 
							      </li>	
								    <% if logged_in? %>
  				          	<li><%= link_to t(:My_data), current_user %></li>
								      <li><%= link_to t(:Privated_messages), 	
          						  user_messages_path(current_user)%>
								        <span class="alert"><%= user_unread_messages %></span>
          						</li>
           						<li><%= link_to t(:My_recipes), recetas_user_path(current_user)%></li>
           						<li><%= link_to t(:My_advices), consejos_user_path(current_user)%></li>
           						<li><%= link_to t(:My_restaurants), restaurantes_user_path(current_user)%></li>
          						<li>
                        <%= link_to t(:My_friends), amigos_user_path(current_user)%> 
                        <span class="alert"><%= invitations_number %></span>
	                    </li>
     	 							<% end %>
						     	</ul>
						    </li>
                <% if controller_name == "restaurants"%>
	         				<li>
	                  <%= render :partial => 'shared/best_restaurants'%>
	        				</li>
	        				<li>
	                  <%= render :partial => 'shared/best_restaurant_critics'%>
	        				</li>
                <% elsif controller_name == "advices" %>
	         				<li>
	                  <%= render :partial => 'shared/best_advices'%>
	        				</li>
	        				<li>
	                  <%= render :partial => 'shared/best_advicers'%>
	        				</li>
	              <% else %>
         				  <li>
                    <%= render :partial => 'shared/best_recipes'%>
        				  </li>			
        				  <li>
                    <%= render :partial => 'shared/best_voted_chefs'%>
         				  </li>
	              <% end %>
          		</ul>
        		</div>
				  </div>
 	  		</div> 	<!-- end #sidebar -->
      <% end %>
		<div class="clear"></div>
	  </div>	<!-- end #page -->	
  </div>

  <div id="footer">
    <p><%= t(:Footer_content)%> <%= link_to 'Juan de FrÃ­as', '/'%></p>
  </div>
  
</body>
</html>
